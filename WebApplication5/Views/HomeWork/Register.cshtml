
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>
<div class="row">
    <div class="col-3"></div>
    <div class="col-6">
        <form id="userForm">
            <div class="mb-3">
                <label for="userName" class="form-label">姓名：</label>
                <input type="text" class="form-control" id="userName" name="Name">
                <div class="alert alert-warning" id="divWarning"></div>
            </div>
            <div class="mb-3">
                <label for="UserEmail" class="form-label">電子郵件：</label>
                <input type="email" class="form-control" id="UserEmail" name="Email">
            </div>
            <div class="mb-3">
                <label for="userAge" class="form-label">年紀：</label>
                <input type="number" class="form-control" id="userAge" name="Age">
            </div>

            <button id="button1" type="submit" class="btn btn-primary">送出</button>
        </form>
        <div class="alert alert-info" id="div1"></div>
    </div>
    <div class="col-3">
    </div>
</div>

@section Scripts {
    <script>
        (async () => {
            const name = document.querySelector('#userName');
            const divWarning = document.querySelector("#divWarning");
            const url = `@Url.Content("~/api/checkaccountaction")?name=${name}`;
            const response = await fetch(url);
            const data = await response.text();
            console.log(data);
            divWarning.innerHTML = data;

        })();
        const tname = document.querySelector('#userName');
        const email = document.querySelector('#UserEmail');
        const age = document.querySelector('#userAge');
        const btn = document.querySelector('#button1');
        const div1 = document.querySelector("#div1");
        btn.addEventListener('click', async (event) => {
            event.preventDefault();
            const url2 = `@Url.Content("~/api/pushdata")?name=${tname.value}&email=${email.value}&age=${age.value}`;
            const response2 = await fetch(url2);
            const data2 = await response2.text();
            console.log(data2);
            div1.innerHTML = data2;
        })

    </script>
}